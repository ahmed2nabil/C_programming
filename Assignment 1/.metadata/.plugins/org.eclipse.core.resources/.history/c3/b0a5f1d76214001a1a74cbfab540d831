#include<stdio.h>
#include<math.h>
int main (){
	int num ,check;
	float sqr;
		setvbuf(stdout, NULL, _IONBF, 0);
		setvbuf(stderr, NULL, _IONBF, 0);
	printf("Enter your Number=");
	scanf("%d",&num);
	sqr= sqrt(num);
	check=(int) sqr*sqr ;
	if(check==num){
		printf("This is perfect square number");
	}else 	{	printf("This is perfect square number");
	}
	return 0;
}
